<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.icfbs.OTPFragment">

    <TextView
        android:id="@+id/tvOTP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:text="OTP has send to the email. Typein the OTP to validate your emailid."
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/background_light" />

    <EditText
        android:id="@+id/etOTP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/tvOTP"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:layout_weight="1"
        android:background="@color/colorLoginET"
        android:ems="10"
        android:hint="Enter OTP"
        android:inputType="number"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@android:color/background_light"
        android:textColorHint="@color/colorTextHint"
        android:textSize="20sp" />

    <Button
        android:id="@+id/bValidateAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etOTP"
        android:layout_margin="4dp"
        android:background="@drawable/button"
        android:text="Validate Email"
        android:textColor="@android:color/background_light" />

</RelativeLayout>
