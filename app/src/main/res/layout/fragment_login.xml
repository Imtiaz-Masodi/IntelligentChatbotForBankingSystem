<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#0000"
    app:cardElevation="10dp"
    tools:context="com.icfbs.LoginFragment">

    <EditText
        android:id="@+id/etLoginID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:layout_weight="1"
        android:background="@color/colorLoginET"
        android:ems="10"
        android:hint="Email or Account No"
        android:inputType="textEmailAddress|textPersonName"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@android:color/background_light"
        android:textColorHint="@color/colorTextHint"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etLoginPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etLoginID"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:layout_weight="1"
        android:background="@color/colorLoginET"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@android:color/background_light"
        android:textColorHint="@color/colorTextHint"
        android:textSize="20sp" />

    <Button
        android:id="@+id/bLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etLoginPassword"
        android:layout_margin="4dp"
        android:background="@drawable/button"
        android:text="Login"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/tvForgotPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/bLogin"
        android:layout_alignStart="@+id/bLogin"
        android:layout_below="@id/bLogin"
        android:layout_margin="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Forgot Password? Get Help Signing In!"
        android:textColor="@android:color/background_light"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/layoutLoginMargin"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignEnd="@id/bLogin"
        android:layout_alignStart="@+id/bLogin"
        android:layout_below="@+id/tvForgotPassword"
        android:background="@android:color/darker_gray"
        android:orientation="vertical" />

    <TextView
        android:id="@+id/tvGuest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/bLogin"
        android:layout_alignStart="@+id/bLogin"
        android:layout_below="@id/layoutLoginMargin"
        android:layout_margin="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Don't have an SBI Account? Use it as a GUEST!"
        android:textColor="@android:color/background_light"
        android:textSize="12sp" />

</RelativeLayout>
