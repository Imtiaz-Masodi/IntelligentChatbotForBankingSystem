<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.icfbs.SignupFragment">

    <EditText
        android:id="@+id/etSignupAccountNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:layout_weight="1"
        android:background="@color/colorLoginET"
        android:ems="10"
        android:hint="Account No"
        android:inputType="number"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@android:color/background_light"
        android:textColorHint="@color/colorTextHint"
        android:textSize="20sp"
        android:visibility="visible" />

    <EditText
        android:id="@+id/etSignupPhoneNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:layout_weight="1"
        android:background="@color/colorLoginET"
        android:ems="10"
        android:layout_below="@+id/etSignupAccountNo"
        android:hint="Phone Number"
        android:inputType="number"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@android:color/background_light"
        android:textColorHint="@color/colorTextHint"
        android:textSize="20sp"
        android:visibility="visible" />

    <EditText
        android:id="@+id/etSignupEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/etSignupPhoneNo"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:layout_weight="1"
        android:background="@color/colorLoginET"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@android:color/background_light"
        android:textColorHint="@color/colorTextHint"
        android:textSize="20sp"
        android:visibility="visible" />

    <EditText
        android:id="@+id/etSignPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etSignupEmail"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:layout_weight="1"
        android:background="@color/colorLoginET"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@android:color/background_light"
        android:textColorHint="@color/colorTextHint"
        android:textSize="20sp"
        android:visibility="visible" />

    <EditText
        android:id="@+id/etSignRePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etSignPassword"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:layout_weight="1"
        android:background="@color/colorLoginET"
        android:ems="10"
        android:hint="Re-Type Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@android:color/background_light"
        android:textColorHint="@color/colorTextHint"
        android:textSize="20sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/bSignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etSignRePassword"
        android:layout_margin="4dp"
        android:background="@drawable/button"
        android:text="Signup"
        android:textColor="@android:color/background_light"
        android:visibility="visible" />

</RelativeLayout>
